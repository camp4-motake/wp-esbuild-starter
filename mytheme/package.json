{
  "name": "wp-theme",
  "author": "CAMP4 inc.",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "dev": "npm run clean && concurrently --raw \"vite\" \"npm:image\" \"npm:sync\"",
    "build": "npm run clean && tsc && concurrently --raw  \"vite build\" \"npm:image\"",
    "sync": "browser-sync start --config bs-config.js",
    "image": "node image.mjs",
    "clean": "rimraf dist",
    "prettier": "prettier --write \"**/*.{vue,js,jsx,ts,tsx,css,sass,scss,less,php,twig}\"",
    "iconfont": "fantasticon --config \"./src/_lib/.fantasticonrc.json\" && prettier --write \"src/styles/common/icons.scss\""
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@prettier/plugin-php": "^0.18.4",
    "@types/alpinejs": "^3.7.0",
    "autoprefixer": "^10.4.7",
    "browser-sync": "^2.27.10",
    "chokidar": "^3.5.3",
    "concurrently": "^7.2.0",
    "cwebp-bin": "8.0.0",
    "dotenv": "^16.0.1",
    "fs-extra": "^10.1.0",
    "globby": "^12.2.0",
    "http-proxy": "^1.18.1",
    "mozjpeg": "8.0.0",
    "pngquant-bin": "^8.0.1",
    "postcss": "^8.4.14",
    "postcss-import": "^14.1.0",
    "postcss-preset-env": "^7.6.0",
    "postcss-rem": "^2.0.2",
    "postcss-sort-media-queries": "^4.2.1",
    "postcss-url": "^10.1.3",
    "prettier": "^2.6.2",
    "prettier-plugin-twig-melody": "^0.4.6",
    "purgecss-with-wordpress": "^4.1.0",
    "rimraf": "^3.0.2",
    "svg-sprite": "^1.5.4",
    "svgo": "2.8.0",
    "typescript": "^4.6.4",
    "vite": "^2.9.9"
  },
  "dependencies": {
    "@alpinejs/intersect": "^3.10.2",
    "alpinejs": "^3.10.2",
    "gsap": "^3.10.4",
    "ress": "^5.0.2"
  },
  "optionalDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "postcss-scss": "^4.0.4",
    "stylelint": "^14.8.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard-scss": "^3.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "globals": {
      "wp": true
    },
    "env": {
      "node": true,
      "es6": true,
      "amd": true,
      "browser": true,
      "jquery": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {},
    "ignorePatterns": [
      "bs-config.js"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order",
      "stylelint-config-prettier"
    ],
    "overrides": [
      {
        "files": [
          "**/*.scss"
        ],
        "customSyntax": "postcss-scss"
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": [
          "**/*.css",
          "**/*.scss",
          "**/*.html"
        ],
        "options": {
          "singleQuote": false
        }
      }
    ],
    "twigAlwaysBreakObjects": false,
    "twigPrintWidth": 100
  }
}
