{
  "name": "wp-theme",
  "author": "CAMP4 inc.",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "dev": "npm run clean && concurrently --raw \"vite\" \"npm:image\" \"npm:sync\"",
    "build": "npm run clean && concurrently --raw  \"vite build\" \"npm:image\"",
    "sync": "browser-sync start --config bs-config.js",
    "image": "node image.mjs",
    "clean": "rimraf dist",
    "prettier": "prettier --write \"**/*.{vue,js,jsx,ts,tsx,css,sass,scss,less,php,twig}\"",
    "iconfont": "fantasticon --config \"./src/_lib/.fantasticonrc.json\" && prettier --write \"src/styles/common/icons.scss\""
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@prettier/plugin-php": "^0.18.4",
    "autoprefixer": "^10.4.4",
    "browser-sync": "^2.27.9",
    "chokidar": "^3.5.3",
    "concurrently": "^7.1.0",
    "cwebp-bin": "7.0.1",
    "dotenv": "^16.0.0",
    "fs-extra": "^10.0.1",
    "globby": "^13.1.1",
    "http-proxy": "^1.18.1",
    "mozjpeg": "8.0.0",
    "pngquant-bin": "^7.0.2",
    "postcss": "^8.4.12",
    "postcss-sort-media-queries": "^4.2.1",
    "postcss-url": "^10.1.3",
    "prettier": "^2.6.2",
    "prettier-plugin-twig-melody": "^0.4.6",
    "purgecss-with-wordpress": "^4.1.0",
    "rimraf": "^3.0.2",
    "sass": "^1.49.11",
    "sass-mq": "^6.0.0",
    "sass-rem": "^3.0.0",
    "svg-sprite": "^1.5.4",
    "svgo": "2.8.0",
    "vite": "^2.9.1"
  },
  "dependencies": {
    "gsap": "^3.10.2",
    "ress": "^4.0.0"
  },
  "optionalDependencies": {
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "postcss-scss": "^4.0.3",
    "stylelint": "^14.6.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard-scss": "^3.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "globals": {
      "wp": true
    },
    "env": {
      "node": true,
      "es6": true,
      "amd": true,
      "browser": true,
      "jquery": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "globalReturn": true,
        "generators": false,
        "objectLiteralDuplicateProperties": false
      },
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "settings": {
      "import/core-modules": [],
      "import/ignore": [
        "node_modules",
        "\\.(coffee|scss|css|less|hbs|svg|json)$"
      ]
    },
    "rules": {
      "no-console": 0,
      "quotes": [
        "error",
        "single"
      ],
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "ignore"
        }
      ]
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss",
      "stylelint-config-recess-order",
      "stylelint-config-prettier"
    ],
    "overrides": [
      {
        "files": [
          "**/*.scss"
        ],
        "customSyntax": "postcss-scss"
      }
    ],
    "rules": {
      "alpha-value-notation": "number",
      "at-rule-empty-line-before": null,
      "color-function-notation": "legacy",
      "declaration-colon-newline-after": null,
      "font-family-name-quotes": null,
      "function-url-quotes": "never",
      "no-descending-specificity": null,
      "no-empty-source": null,
      "number-max-precision": null,
      "selector-class-pattern": null,
      "selector-id-pattern": null,
      "value-list-comma-newline-after": null,
      "value-no-vendor-prefix": [
        true,
        {
          "ignoreValues": [
            "box",
            "fill-available"
          ]
        }
      ],
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "apply",
            "at-root",
            "content",
            "debug",
            "each",
            "else",
            "error",
            "extend",
            "for",
            "function",
            "if",
            "include",
            "mixin",
            "responsive",
            "return",
            "screen",
            "tailwind",
            "use",
            "variants",
            "warn",
            "while"
          ]
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": [
          "**/*.css",
          "**/*.scss",
          "**/*.html"
        ],
        "options": {
          "singleQuote": false
        }
      }
    ],
    "twigAlwaysBreakObjects": false,
    "twigPrintWidth": 100
  }
}
