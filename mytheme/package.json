{
  "name": "mytheme",
  "author": "CAMP4 inc.",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "16"
  },
  "scripts": {
    "dev": "npm run clean && concurrently --raw \"vite\" \"npm:image\" \"npm:sync\"",
    "build": "npm run clean && tsc && concurrently --raw  \"vite build\" \"npm:image\"",
    "sync": "browser-sync start --config bs-config.js",
    "image": "node image.mjs",
    "clean": "rimraf dist",
    "prettier": "prettier --write \"**/*.{vue,js,jsx,ts,tsx,css,sass,scss,less,php,twig}\"",
    "iconfont": "fantasticon --config \"./src/_lib/.fantasticonrc.json\" && prettier --write \"src/styles/common/icons.scss\""
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@prettier/plugin-php": "^0.18.7",
    "@types/alpinejs": "^3.7.0",
    "@types/node": "^17.0.41",
    "browser-sync": "^2.27.10",
    "concurrently": "^7.2.1",
    "dotenv": "^16.0.1",
    "fs-extra": "^10.1.0",
    "globby": "^13.1.1",
    "http-proxy": "^1.18.1",
    "postcss": "^8.4.14",
    "postcss-preset-env": "^7.7.1",
    "postcss-sort-media-queries": "^4.2.1",
    "postcss-url": "^10.1.3",
    "prettier": "^2.6.2",
    "prettier-plugin-twig-melody": "^0.4.6",
    "purgecss-with-wordpress": "^4.1.0",
    "rimraf": "^3.0.2",
    "sass": "^1.52.2",
    "sharp": "^0.30.6",
    "svg-sprite": "^1.5.4",
    "svgo": "2.8.0",
    "typescript": "^4.7.3",
    "vite": "^2.9.10"
  },
  "dependencies": {
    "@alpinejs/intersect": "^3.10.2",
    "alpinejs": "^3.10.2",
    "ress": "^5.0.2",
    "vanilla-cookieconsent": "^2.8.0"
  },
  "optionalDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "postcss-scss": "^4.0.4",
    "stylelint": "^14.8.5",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard-scss": "^4.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "globals": {
      "wp": true
    },
    "env": {
      "node": true,
      "es6": true,
      "amd": true,
      "browser": true,
      "jquery": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {},
    "ignorePatterns": [
      "bs-config.js"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss",
      "stylelint-config-recess-order",
      "stylelint-config-prettier"
    ],
    "overrides": [
      {
        "files": [
          "**/*.scss"
        ],
        "customSyntax": "postcss-scss"
      }
    ],
    "rules": {
      "color-function-notation": "legacy",
      "no-descending-specificity": null,
      "selector-class-pattern": null,
      "selector-id-pattern": null
    }
  },
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": [
          "**/*.css",
          "**/*.scss",
          "**/*.html"
        ],
        "options": {
          "singleQuote": false
        }
      }
    ],
    "twigAlwaysBreakObjects": false,
    "twigPrintWidth": 100
  }
}
