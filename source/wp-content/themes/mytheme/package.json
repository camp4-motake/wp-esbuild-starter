{
  "name": "mytheme",
  "author": "CAMP4 inc.",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^18 || ^20"
  },
  "scripts": {
    "dev": "npm run reset && concurrently --raw npm:dev:*",
    "dev:scripts": "npm run esbuild -- --watch",
    "dev:styles": "npm run postcss -- --watch --map",
    "dev:images": "npm run images",
    "build": "npm run reset && concurrently --raw npm:build:*",
    "build:scripts": "tsc && npm run esbuild -- --minify",
    "build:styles": "NODE_ENV=production npm run postcss -- --no-map",
    "build:images": "NODE_ENV=production npm run images",
    "esbuild": "esbuild src/{main,editor}.ts --bundle --outdir=dist --platform=browser --splitting --format=esm",
    "postcss": "postcss src/styles/{main,editor}.css -d dist --verbose",
    "images": "node image.config.mjs",
    "reset": "rimraf dist/*"
  },
  "devDependencies": {
    "@types/alpinejs": "^3.13.5",
    "@types/node": "^20.10.2",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "cssnano": "^6.0.1",
    "esbuild": "^0.19.8",
    "find-yarn-workspace-root": "^2.0.0",
    "fs-extra": "^11.2.0",
    "globby": "^14.0.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^10.1.0",
    "postcss-easy-import": "^4.0.0",
    "postcss-preset-env": "^9.3.0",
    "postcss-sort-media-queries": "^5.2.0",
    "postcss-url": "^10.1.3",
    "rimraf": "^5.0.5",
    "sharp": "^0.33.0",
    "svgo": "3.0.5",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@alpinejs/intersect": "^3.13.3",
    "@wordpress/dom-ready": "^3.47.0",
    "alpinejs": "^3.13.3",
    "budoux": "^0.6.1",
    "ress": "^5.0.2"
  },
  "browserslist": [
    "> 0.5% in JP and last 2 years and not dead"
  ]
}
