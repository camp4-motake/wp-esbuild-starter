{
  "name": "mytheme",
  "author": "CAMP4 inc.",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "dev": "npm run reset && concurrently --raw npm:dev:*",
    "dev:watch": "browser-sync start --config bs-config.cjs",
    "dev:scripts": "npm run esbuild -- --watch",
    "dev:styles": "npm run postcss -- --watch",
    "dev:images": "npm run images",
    "build": "npm run reset && concurrently --raw npm:build:*",
    "build:scripts": "tsc && npm run esbuild -- --minify",
    "build:styles": "NODE_ENV=production npm run postcss",
    "build:images": "npm run images",
    "esbuild": "esbuild src/*.ts --bundle --outdir=dist --platform=browser --target=es2020,chrome58",
    "postcss": "postcss src/styles/*.css -d dist",
    "images": "node image.config.mjs",
    "reset": "rimraf dist"
  },
  "devDependencies": {
    "@types/alpinejs": "^3.7.2",
    "@types/body-scroll-lock": "^3.1.0",
    "@types/node": "^20.4.0",
    "@wordpress/browserslist-config": "^5.20.0",
    "browser-sync": "^2.29.3",
    "concurrently": "^8.2.0",
    "cssnano": "^6.0.1",
    "esbuild": "^0.18.11",
    "find-yarn-workspace-root": "^2.0.0",
    "fs-extra": "^11.1.1",
    "globby": "^13.2.2",
    "postcss": "^8.4.25",
    "postcss-cli": "^10.1.0",
    "postcss-easy-import": "^4.0.0",
    "postcss-preset-env": "^9.0.0",
    "postcss-sort-media-queries": "^5.2.0",
    "postcss-url": "^10.1.3",
    "rimraf": "^5.0.1",
    "sharp": "^0.32.1",
    "svg-sprite": "^2.0.2",
    "svgo": "3.0.2",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@alpinejs/intersect": "^3.12.3",
    "alpinejs": "^3.12.3",
    "budoux": "^0.5.2",
    "ress": "^5.0.2"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ]
}
