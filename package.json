{
  "name": "mytheme",
  "version": "0.1.0",
  "author": "CAMP4 inc.",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^18 || ^20"
  },
  "scripts": {
    "dev": "dotenv -- run-p dev:*",
    "dev:packages": "npm run dev --silent --workspaces --if-present",
    "dev:serve": "browser-sync start --config bs-config.cjs",
    "build": "dotenv -- npm run build --workspaces --if-present --silent",
    "--- tools ---": "",
    "composer": "docker compose run --rm composer",
    "wp-cli": "docker compose run --rm cli bash -c",
    "--- setup ---": "",
    "setup:init": "chmod +x ./env/*.sh && chmod +x ./bin/init.sh && ./bin/init.sh",
    "setup:wp": "docker compose run --rm cli bash './env/setup.sh'",
    "--- lint ---": "",
    "lintFix": "dotenv --silent -- run-s lintFix:**",
    "lintFix:format": "prettier --write --list-different .",
    "lintFix:styles": "stylelint source/wp-content/themes/$WP_THEME_NAME/src/**/*.css --fix",
    "lintFix:scripts": "eslint --ignore-path .prettierignore . --fix",
    "--- wp:18n ---": "",
    "i18n:pot": "docker compose run cli bash env/i18n.sh --make-pot",
    "i18n:compile": "docker compose run cli bash env/i18n.sh --make-mo",
    "i18n:update": "docker compose run cli bash env/i18n.sh --update-po",
    "--- wp:backup ---": "",
    "wp-export": "docker compose run cli bash env/export.sh",
    "wp-import": "docker compose run cli bash env/import.sh"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "browser-sync": "^2.29.3",
    "dotenv-cli": "^7.3.0",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "stylelint": "15.11.0",
    "stylelint-config-recess-order": "4.4.0",
    "stylelint-config-recommended": "13.0.0"
  },
  "workspaces": [
    "source/wp-content/themes/mytheme"
  ],
  "volta": {
    "node": "20.10.0"
  }
}
