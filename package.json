{
  "name": "mytheme",
  "version": "0.1.0",
  "author": "CAMP4 inc.",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^18 || ^20"
  },
  "scripts": {
    "dev": "concurrently --raw \"npm run dev -s --workspaces --if-present\" \"browser-sync start --config bs-config.cjs\"",
    "build": "npm run build --workspaces --if-present",
    "composer": "docker run --rm --interactive --tty --volume $PWD:/app composer",
    "wp-cli": "docker compose run --rm cli bash -c",
    "setup:init": "chmod +x ./bin/init.sh && ./bin/init.sh",
    "setup:tools": "npm run composer install",
    "setup:wp": "npm run wp-cli './env/setup.sh'",
    "setup:all": "docker compose up -d && npm run setup:tools && npm run setup:wp",
    "lintFix": "prettier --write --list-different . && npm run lintFix:scripts && npm run lintFix:styles",
    "lintFix:styles": "stylelint \"source/wp-content/themes/mytheme/src/**/*.css\" --fix",
    "lintFix:scripts": "eslint --ignore-path .prettierignore --ext .js,.jsx,.cjs,.mjs,.ts,.tsx . --fix",
    "i18n:pot": "npm run wp-cli \"wp i18n make-pot wp-content/themes/mytheme wp-content/themes/mytheme/lang/mytheme.pot --skip-theme-json\"",
    "i18n:compile": "npm run wp-cli \"wp i18n make-mo wp-content/themes/mytheme/lang wp-content/themes/mytheme/lang\"",
    "i18n:update": "npm run wp-cli \"wp i18n update-po wp-content/themes/mytheme/lang/mytheme.pot wp-content/themes/mytheme/lang\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "browser-sync": "^2.29.3",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.1.0",
    "prettier": "^3.1.0",
    "stylelint": "15.11.0",
    "stylelint-config-recess-order": "4.4.0",
    "stylelint-config-recommended": "13.0.0"
  },
  "workspaces": [
    "source/wp-content/themes/mytheme"
  ],
  "volta": {
    "node": "18.17.1"
  }
}
