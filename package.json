{
  "name": "wp-starter",
  "version": "0.1.0",
  "author": "CAMP4 inc.",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "concurrently --raw \"npm run dev --workspaces --if-present\" \"browser-sync start --config bs-config.cjs\"",
    "build": "npm run build --workspaces --if-present",
    "composer": "docker run --rm --interactive --tty --volume $PWD:/app composer",
    "wp-cli": "docker compose run --rm cli bash -c",
    "setup:tools": "npm ci && npm run composer install",
    "setup:wp": "npm run wp-cli './env/setup.sh'",
    "lintFix": "prettier --write --list-different . && concurrently --raw npm:lintFix:*",
    "lintFix:styles": "stylelint \"source/wp-content/themes/*/src/**/*.css\" --fix",
    "lintFix:scripts": "eslint --ignore-path .prettierignore --ext .js,.jsx,.cjs,.mjs,.ts,.tsx . --fix",
    "i18n:pot": "npm run wp-cli \"wp i18n make-pot wp-content/themes/mytheme wp-content/themes/mytheme/lang/mytheme.pot --skip-theme-json\"",
    "i18n:compile": "npm run wp-cli \"wp i18n make-mo wp-content/themes/mytheme/lang wp-content/themes/mytheme/lang\"",
    "i18n:update": "npm run wp-cli \"wp i18n update-po wp-content/themes/mytheme/lang/mytheme.pot wp-content/themes/mytheme/lang\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "browser-sync": "^2.29.3",
    "concurrently": "^8.2.0",
    "dotenv": "^16.1.4",
    "eslint": "8.42.0",
    "eslint-config-prettier": "8.8.0",
    "prettier": "^2.8.8",
    "stylelint": "15.7.0",
    "stylelint-config-recess-order": "4.2.0",
    "stylelint-config-recommended": "12.0.0"
  },
  "workspaces": [
    "source/wp-content/themes/mytheme"
  ]
}
