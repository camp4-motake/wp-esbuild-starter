{
  "files.exclude": {
    // ".cache": true,
    // ".npmrc": true,
    // "composer.lock": true,
    // "node_modules": false,
    // "package-lock.json": true,
    // "source/wp-content/languages": true,
    // "source/wp-content/mu-plugins": true,
    // "source/wp-content/plugins": true,
    // "vendor": true
  },
  "files.watcherExclude": {
    "source/wp-content/themes/mytheme/dist/*": true
  },
  "alpine-intellisense.settings.languageScopes": "html,php",
  "css.validate": false,
  "postcss.validate": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "emmet.includeLanguages": {
    "postcss": "css"
  },
  "files.associations": {
    "*.css": "postcss"
  },
  "intelephense.environment.includePaths": [
    "source/wp-content/plugins/advanced-custom-fields-pro",
    "source/wp-content/plugins/wordpress-seo"
  ],
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "[handlebars]": {
    "editor.formatOnSave": false
  }
}
