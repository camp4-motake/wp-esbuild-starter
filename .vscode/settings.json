{
	"files.exclude": {
		".cache": true,
		"composer.lock": true,
		"node_modules": true,
		"package-lock.json": true,
		"source/wp-content/languages": true,
		"source/wp-content/mu-plugins": true,
		"source/wp-content/plugins": true,
		"vendor": true
	},
	"files.watcherExclude": {
		"source/wp-content/themes/mytheme/dist/*": true
	},
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true,
	"emmet.includeLanguages": {
		"postcss": "css"
	},
	"files.associations": {
		"*.css": "postcss"
	},
	"css.validate": false,
	"postcss.validate": false,
	"[php]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "obliviousharmony.vscode-php-codesniffer"
	},
	"phpCodeSniffer.autoExecutable": true,
	"phpCodeSniffer.standard": "Automatic",
	"phpCodeSniffer.lintAction": "Save",
	"intelephense.environment.includePaths": ["source/wp-content/plugins"],
	"[typescript]": {
		"editor.codeActionsOnSave": {
			"source.organizeImports": "explicit"
		}
	},
	"[handlebars]": {
		"editor.formatOnSave": false
	},
	"alpine-intellisense.settings.languageScopes": "html,php",
	"wordpressThemeJsonCssAutosuggest.enable": true,
	"wordpressThemeJsonCssAutosuggest.themeJsonPath": "source/wp-content/themes/mytheme"
}
