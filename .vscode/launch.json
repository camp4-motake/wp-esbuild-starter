{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "stopOnEntry": true,
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Debug app",
      "preLaunchTask": "npm: debug",
      "url": "http://localhost:5000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js"
      ]
    }
  ]
}
